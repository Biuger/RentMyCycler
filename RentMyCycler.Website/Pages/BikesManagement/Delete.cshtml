@page "{id:int}"
@model RentMyCycler.Website.Pages.BikesManagement.Delete


<!DOCTYPE html>

<html>
<head>
    <title>Add / Edit Bike</title>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Deleting Bike</h2>
            <form method="post" id="bikeForm">
                    <input readonly type="hidden" asp-for="BikeDto.id"/>
                    <div class="form-group">
                        <label asp-for="BikeDto.Brand"></label>
                        <input readonly asp-for="BikeDto.Brand" class="form-control" maxlength="45" required/>
                        <span class="text-danger" asp-validation-for="BikeDto.Brand"></span>
                    </div>
                                        
                    <div class="form-group">
                        <label asp-for="BikeDto.Model"></label>
                        <input readonly asp-for="BikeDto.Model" class="form-control" maxlength="45" required/>
                        <span class="text-danger" asp-validation-for="BikeDto.Model"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BikeDto.Description"></label>
                        <input readonly asp-for="BikeDto.Description" class="form-control" maxlength="45" required/>
                        <span class="text-danger" asp-validation-for="BikeDto.Description"></span>
                    </div>
                                        
                    <div class="form-group">
                        <label for="Colour">Colour:</label>
                        <select disabled="disabled" id="Colour" class="form-control" asp-for="BikeDto.Colour" required>
                            <option value="Orange">Orange</option>
                            <option value="Red">Red</option>
                            <option value="Black">Black</option>
                            <option value="Withe">Withe</option>
                            <option value="Blue">Blue</option>
                        </select>
                    </div>
                                        
                    <div class="form-group">
                        <label asp-for="BikeDto.Image"></label>
                        <input readonly asp-for="BikeDto.Image" class="form-control" maxlength="100" required/>
                        <span class="text-danger" asp-validation-for="BikeDto.Image"></span>
                    </div>
                                        
                    <div class="form-group">
                        <label for="ConditionBike">Condition Bike:</label>
                        <select disabled="disabled" id="ConditionBike" class="form-control" asp-for="BikeDto.Condition_bike" required>
                            <option value="New">New</option>
                            <option value="Used">Used</option>
                            <option value="Bad conditions">Bad conditions</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="BikeDto.Rental_cost"></label>
                        <input readonly asp-for="BikeDto.Rental_cost" class="form-control" type="number" step="0.01" max="999999.99" required/>
                        <span class="text-danger" asp-validation-for="BikeDto.Rental_cost"></span>
                    </div>
                
               
                @if (Model.Errors.Count > 0)
                {
                    <div class="aler alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>This bike already exist</li>
                            }
                        </ul>
                    </div>
                }
                <br/>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3" id="saveButton"> Delete</button>
                        <a class="btn btn-secondary" asp-page="/BikesManagement/BikesManagement">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
</body>
</html>