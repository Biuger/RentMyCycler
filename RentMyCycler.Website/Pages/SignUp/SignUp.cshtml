@page
@model RentMyCycler.Website.Pages.SignUp.SignUp

<!DOCTYPE html>

<html>
<head>
   
    <link rel="stylesheet" href="~/css/SignUpCss.css" />
</head>
<body>
<div class="text-center">
    <h1 class="display-4">RentMyCycler</h1>
    <a class="lead">Pedal towards adventure!</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
        <h2>Personal Information</h2>
            <div class="form-group">
                <label for="Username">Username:</label>
                <input id="Username" class="form-control" type="text" asp-for="Input.Username" required />
            </div>
            <div class="form-group">
                <label for="Address">Adress:</label>
                <input id="Address" class="form-control" type="text" asp-for="Input.Address" required />
            </div>
            
            <div class="form-group">
                <label for="Birthdate">BirthDate:</label>
                <input id="Birthdate" class="form-control" type="date" asp-for="Input.Birthdate" required />
            </div>
            <div class="form-group">
                <label for="CyclingPreferences">Cycling preferences:</label>
                <select id="CyclingPreferences" class="form-control" asp-for="Input.CyclingPreferences" required>
                    <option value="">Selecciona una opción</option>
                    <option value="mountain">Montaña</option>
                    <option value="road">Carretera</option>
                    <option value="hybrid">Híbrido</option>
                                
                </select>
            </div>
            
            <br/>
            <h2>Credentials</h2>
            <div class="form-group">
                <label for="Email">E-mail address:</label>
                <input id="Email" class="form-control" type="email" asp-for="Input.Email" required />
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input id="Password" class="form-control" type="password" asp-for="Input.Password" required />
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Confirm Password:</label>
                <input id="ConfirmPassword" class="form-control" type="password" asp-for="Input.ConfirmPassword" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>
</body>
</html>
